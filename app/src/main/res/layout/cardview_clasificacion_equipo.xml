<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    android:layout_margin="5dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrincipal">
        <TextView
            android:id="@+id/posicionEquipoClasificacion"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/escudoEquipoClasificacion"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintLeft_toRightOf="@id/posicionEquipoClasificacion"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="8dp" />
        <TextView
            android:id="@+id/nombreEquipoClasificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/escudoEquipoClasificacion"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="8dp"
            android:textSize="13dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/golaverajeEquipoClasificacion"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="8dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/golesContraEquipoClasificacion"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/golaverajeEquipoClasificacion"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="8dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/golesFavorEquipoClasificacion"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/golesContraEquipoClasificacion"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="8dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/partidosJugadosEquipoClasificacion"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/golesFavorEquipoClasificacion"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="8dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/puntosEquipoClasificacion"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/partidosJugadosEquipoClasificacion"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="8dp"
            android:textColor="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>